#include <iostream>
#include <algorithm>
using namespace std;

int main()
{
    int t;
    cin >> t;
    int n;
    string s;
    for (int i = 1; i <= t; i++){
        cin >> n >> s;
        if (n != 5){
            cout << "NO"<< endl;
        }
        else{
            sort(s.begin(),s.end());
            if (s == "Timru"){
                cout << "YES" << endl;
            }
            else{
                cout << "NO" << endl;
            }
        }
    }
    return 0;
}
